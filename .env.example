# Hping3 Traffic Orchestrator Configuration

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./hping_orchestrator.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/hping_orchestrator

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
DEBUG=false

# Safety & Limits
DEFAULT_MAX_PPS=100
DEFAULT_MAX_CONCURRENT_JOBS=5
DEFAULT_MAX_JOB_DURATION=3600
GLOBAL_MAX_PPS=10000
GLOBAL_MAX_CONCURRENT_JOBS=50

# Job Management  
JOB_CLEANUP_INTERVAL=300
JOB_HISTORY_RETENTION_DAYS=30
MAX_JOB_OUTPUT_SIZE=1048576

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true

# Process Management
HPING_TIMEOUT=300
PROCESS_CHECK_INTERVAL=1

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30